<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Blog</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img class="mt-2" src="<%= blog.coverImageUrl %>"  width="800vh" />
        <pre><div class="mt-5" style="font-family: sans-serif; color: #252939; font-size: 20px; display: flex; text-wrap: pretty;">
            <%= blog.body %>
        </div></pre>
    </div>
    <div style="display: flex; align-items: center; justify-content: left;" class="container mt-3">
        <img class="mr-2" src="<%= blog.createdBy.profileImageUrl %>" width="40px" /><pre style="font-size: 18px; font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;">  <%= blog.createdBy.fullName %></pre>
    </div>


    <div class="card text-center mt-4">
        <div class="card-header">
           <h3>Comments (<%= comments.length %>)</h3> 
        </div>
        <% comments.forEach(com => { %>
        <div class="card-body">
          
          <p class="card-text"><%= com.content %></p>
          <img src="<%= com.createdBy.profileImageUrl %>" width="25px" /><%= com.createdBy.fullName %>
          
        </div>
        
        
        <% }) %>
      </div>

    <% if (locals.user) { %>
        <div class="container mb-5">
            
            <form class="mt-3" action="/blog/comment/<%= blog._id %>" method="POST">
                
                <div class="mb-3">
                  
                  <input type="text" class="form-control" id="content" name="content" aria-describedby="content" placeholder="Enter your comment">
                </div>

                
                
                <button type="submit" class="btn btn-primary">Comment</button>
              </form>
        </div>
    <% } %>
    
    <%- include("./partials/scripts") %> 
</body>
</html>